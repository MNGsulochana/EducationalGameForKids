<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Gallery
        android:id="@+id/gallery1"
        android:layout_weight="2.5"
        android:background="#0077aa"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <LinearLayout
        android:layout_weight="1"
        android:background="#992288"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <Spinner
            android:layout_width="0dp"
            android:spinnerMode="dropdown"
            android:layout_weight="0.50"
            android:layout_height="wrap_content"
            android:popupBackground="#573293"
            android:id="@+id/spinner1"></Spinner>



         <TextView

        android:id="@+id/textView1"
        android:paddingLeft="20dp"
        android:layout_width="0dp"
             android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textColor="#ffff33"
android:textSize="35sp"
android:background="#992288"
android:layout_gravity="center"
android:gravity="center"
        
       />
     <ImageView
                 android:id="@+id/imageView6"
                 android:contentDescription="@menu/main"
                 android:background="#992288"
                 android:layout_gravity="center"
                 android:gravity="center"
                 android:layout_weight="0.40"
                 
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:src="@drawable/ic_action_volume_on" />
    </LinearLayout>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_weight="6"
        android:background="#992288"
        android:id="@+id/framelayout"
        android:layout_height="0dp" >



        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:background="@drawable/shapefornumber"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#998888"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="100sp"
            android:layout_height="match_parent"
           android:textAppearance="?android:attr/textAppearanceLarge" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:contentDescription="@menu/main"
            android:background="@drawable/shape2"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/shape1"
            android:clickable="true"/>


        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:background="#992288"
            android:orientation="horizontal"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/imageView5"
                android:layout_weight="9"
                android:layout_width="0dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginEnd="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:contentDescription="@menu/main"
                android:layout_height="match_parent"
                android:background="@drawable/imageview1"
                android:src="@drawable/shape2"
                android:clickable="true"/>

            <LinearLayout
                android:id="@+id/linear3"
                android:layout_width="0dp"
                android:padding="5dp"
                android:background="#992288"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_height="match_parent"
               android:layout_weight="3"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/button1"
                   style="?android:attr/buttonStyleSmall"
                    android:layout_width="match_parent"
                   android:layout_gravity="center"
                    android:background="@drawable/button1"
               android:layout_marginTop="4dp"
               android:layout_marginLeft="4dp"
               android:layout_marginRight="4dp"
               android:layout_marginBottom="4dp"
               android:textSize="25sp"
               android:textColor="#000000"
                    android:layout_height="wrap_content"
                     />

                <Button
                    android:id="@+id/button2"
                    style="?android:attr/buttonStyleSmall"
                    android:background="@drawable/button1"
                    android:layout_width="match_parent"
                  android:layout_marginLeft="4dp"
               android:layout_marginRight="4dp"
               android:layout_marginBottom="4dp"
               android:textSize="25sp"
                android:textColor="#000000"
                     android:layout_gravity="center"
                    android:layout_height="wrap_content"
                     />

                <Button
                    android:id="@+id/button3"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="match_parent"
                    android:background="@drawable/button1"
                   android:layout_marginLeft="4dp"
               android:layout_marginRight="4dp"
               android:layout_marginBottom="4dp"
                     android:layout_gravity="center"
                     android:textSize="25sp"
                      android:textColor="#000000"
                    android:layout_height="wrap_content"
                     />

                <Button
                    android:id="@+id/button4"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="match_parent"
                   android:background="@drawable/button1"
                     android:textColor="#000000"
                    android:layout_marginLeft="4dp"
               android:layout_marginRight="4dp"
               android:layout_marginBottom="4dp"
                     android:layout_gravity="center"
                     android:textSize="25sp"
                    android:layout_height="wrap_content"
                   />

            </LinearLayout>

        </LinearLayout>

           </FrameLayout>

    
    
        
               
       <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:background="#992288"
     android:layout_weight="1.5"
        android:orientation="horizontal"
        android:layout_height="0dp" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@menu/main"
            android:layout_weight="1"
            android:src="@drawable/ic_action_previous" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:contentDescription="@menu/main"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/ic_action_play" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:contentDescription="@menu/main"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/ic_action_next" />

    </LinearLayout>
        
        
  
    <TextView
        android:id="@+id/textView3"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#ffff33"
        android:textSize="30sp"
        android:background="#992288"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</LinearLayout>
